import java.util.Scanner;

public class Main {
	public static void selam() {
		
		System.out.println("Merhabalarrr...");
		System.out.println("Selamlarrr...");
	}
	
	public static void faktoriyel() {
		Scanner scanner = new Scanner(System.in);
		System.out.println("Lütfen faktoriyelini almak istediğiniz sayiyi giriniz : ");
		int sayi = scanner.nextInt();
		int faktoriyel = 1;
		int gecici = sayi;
		while(sayi > 0) {
		   
			faktoriyel *= sayi;
			sayi -=1;
		
			
		}
		
		System.out.println(gecici + " nin faktoriyeli " + faktoriyel  );
		
	}

	
	public static void main(String[] args) {
	   
		selam();
		faktoriyel();
			
		}

	    }
